class Solution:
    def removeOuterParentheses(self, s: str) -> str:
        res=[]
        balance=0
        for ch in s:
            if ch=="(":
                if balance>0:
                    res.append("(")
                balance+=1
            else:
                balance-=1
                if balance>0:
                    res.append(")")    
        return "".join(res)
